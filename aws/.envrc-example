## Project root directory
#
PROJECT_ROOT="/Users/example/bosh_iaas_bootstrap"

## aws-cli things
#
export AWS_DEFAULT_REGION=us-west-1

export AWS_ACCESS_KEY_ID=examplexxxxxxxxxxxxxxxxxxxxxx
export AWS_SECRET_ACCESS_KEY=examplexxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxy
export AWS_REGION=us-west-1

## bbl things
# ENV_NAME needs to be short
# ENV_NAME needs to be globally unique (for S3)
#
export BBL_ENV_NAME='example-2563fd0e'
export BBL_IAAS=aws
export BBL_STATE_DIRECTORY="$PROJECT_ROOT/$BBL_IAAS"

export BBL_AWS_ACCESS_KEY_ID="$AWS_ACCESS_KEY_ID"
export BBL_AWS_SECRET_ACCESS_KEY="$AWS_SECRET_ACCESS_KEY"
export BBL_AWS_REGION="$AWS_REGION"

## bosh director things
#
if [[ -e "$BBL_STATE_DIRECTORY/bbl-state.json" ]]
then
  eval "$(bbl print-env)"
  export EXTERNAL_HOST="$(bbl lbs | cut -d '[' -f 2 | sed 's/]//')"
  export STEMCELL_URL=https://bosh.io/d/stemcells/bosh-aws-xen-hvm-ubuntu-xenial-go_agent
fi
